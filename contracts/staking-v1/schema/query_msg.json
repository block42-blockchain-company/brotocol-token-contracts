{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "description": "This structure describes the query messages of the contract",
  "oneOf": [
    {
      "title": "Description",
      "description": "Returns staking contract config in the [`ConfigResponse`] object",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "title": "Description",
      "description": "Returns staking contract state in the [`StateResponse`] object",
      "type": "object",
      "required": [
        "state"
      ],
      "properties": {
        "state": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "title": "Description",
      "description": "Returns staker info by specified address in the [`StakerInfoResponse`] object",
      "type": "object",
      "required": [
        "staker_info"
      ],
      "properties": {
        "staker_info": {
          "type": "object",
          "required": [
            "staker"
          ],
          "properties": {
            "staker": {
              "description": "staker address",
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "title": "Description",
      "description": "Returns available amount for staker to claim by specified address in the [`StakerAccruedRewardsResponse`] object",
      "type": "object",
      "required": [
        "staker_accrued_rewards"
      ],
      "properties": {
        "staker_accrued_rewards": {
          "type": "object",
          "required": [
            "staker"
          ],
          "properties": {
            "staker": {
              "description": "staker address",
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "title": "Description",
      "description": "Returns available withdrawals for staker by specified address in the [`WithdrawalsResponse`] object",
      "type": "object",
      "required": [
        "withdrawals"
      ],
      "properties": {
        "withdrawals": {
          "type": "object",
          "required": [
            "staker"
          ],
          "properties": {
            "staker": {
              "description": "staker address",
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    }
  ]
}
